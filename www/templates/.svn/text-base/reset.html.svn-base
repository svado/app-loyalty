<ion-modal-view ng-controller="ContactCtrl">
    <ion-header-bar class="bar-positive">
        <h1 class="title">Forgotten password</h1>
        <div class="buttons">
            <button class="button button-clear" ng-click="closeReset()">Close</button>
        </div>
    </ion-header-bar>
    <ion-content>
        <form name="fReset" ng-submit="doReset()">
            <h5 class="text-center">Enter your email address below and we will send you instructions for changing your password and logging in</h5>
            <div class="list">
                <label class="item item-input">
                    <span class="input-label">Your email</span>
                    <div ng-messages="fReset.email.$error" ng-messages-include="messages.html"></div>
                    <input type="email" ng-model="$parent.resetData.email" name="email" required>
                </label>
                <label class="item">
                    <button class="button button-block button-outline button-positive" type="submit" ng-disabled="fReset.$invalid">Submit</button>
                </label>
            </div>
        </form>
    </ion-content>
</ion-modal-view>
