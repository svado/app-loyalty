<ion-modal-view ng-controller="ProfileCtrl">
    <ion-header-bar class="bar-positive">
        <h5 class="title">Editar perfil</h5>
        <div class="buttons">
            <button class="button button-clear" ng-click="closeProfile()">Cerrar</button>
        </div>
    </ion-header-bar>
    <ion-content>
        <form name="fProfile" id="fProfile" ng-submit="updContact()">
            <input type="hidden" ng-model="codigo_cliente" name="codigo_cliente" ng-value="{{codigo_cliente}}">
            <input type="hidden" ng-model="codigo_email" name="codigo_email" ng-value="{{codigo_email}}">
            <input type="hidden" ng-model="codigo_phone" name="codigo_phone" ng-value="{{codigo_phone}}">
            <div class="list">
                <div class="item item-divider"> Perfil b&aacute;sico </div>
                <label class="item item-input"> <span class="input-label">Nombre</span>
                    <div ng-messages="fProfile.first_name.$error" ng-messages-include="messages.html"></div>
                    <input type="text" ng-model="$parent.first_name" name="first_name" required ng-minlength="3" placeholder="Nombre"> </label>
                <label class="item item-input"> <span class="input-label">Apellido</span>
                    <div ng-messages="fProfile.last_name.$error" ng-messages-include="messages.html"></div>
                    <input type="text" ng-model="$parent.last_name" name="last_name" required ng-minlength="3" placeholder="Apellido"> </label>
                <label class="item item-input"> <span class="input-label">Email</span>
                    <div ng-messages="fProfile.email.$error" ng-messages-include="messages.html"></div>
                    <input type="email" ng-model="$parent.email" name="email" required placeholder="Email"> </label>
                <label class="item item-input"> <span class="input-label">Tel&eacute;fono</span>
                    <div ng-messages="fProfile.phone.$error" ng-messages-include="messages.html"></div>
                    <input type="tel" ng-model="$parent.phone" name="phone" required placeholder="Tel&eacute;fono"> </label>                
                <label class="item item-input item-select">
                    <div class="input-label">Pa&iacute;s</div>
                    <select id="codigo_pais" name="codigo_pais" required>
                        <option ng-repeat="country in countries" value="{{country.CODIGO_PAIS}}" ng-selected="country.ISO2 == $parent.iso2">{{country.NOMBRE_PAIS_ING | uppercase}}</option>
                    </select>
                </label>
                <label class="item item-input"> <span class="input-label">Fecha de nacimiento</span>
                    <div ng-messages="fProfile.birth_date.$error" ng-messages-include="messages.html"></div>
                    <input type="date" ng-model="$parent.birth_date" name="birth_date" placeholder="Fecha de nacimiento"> </label> 
                <div class="item item-divider"> Cambiar contrase&ntilde;a </div>
                <label class="item item-input"> <span class="input-label">Contrase&ntilde;a</span>
                    <div ng-messages="fProfile.password.$error" ng-messages-include="messages.html"></div>
                    <input type="password" ng-model="$parent.password" name="password" ng-minlength="6" placeholder="Contrase&ntilde;a"> </label>
                <label class="item item-input"> <span class="input-label">Repetir contrase&ntilde;a</span>
                    <div ng-messages="fProfile.password2.$error" ng-messages-include="messages.html"></div>
                    <input type="password" ng-model="$parent.password2" name="password2" ng-minlength="6" placeholder="Repetir contrase&ntilde;a"> </label>
                <label class="item">
                    <button class="button button-block button-outline button-positive" type="submit" ng-disabled="fProfile.$invalid">Actualizar</button>
                </label>
            </div>
        </form>
    </ion-content>
</ion-modal-view>