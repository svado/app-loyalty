<ion-modal-view >
    <ion-header-bar class="bar-positive">
        <h5 class="title">{{page_title_term}}</h5>
        <div class="buttons">
            <button class="button button-clear" ng-click="closeTerms()">Cerrar</button>
        </div>
    </ion-header-bar>
    <ion-content class="padding">    
        <h4 ng-if="title_term">{{title_term | uppercase}}</h4>
        <div ng-bind-html="content_term"></div>
        <p><small>Brittshop Loyalty v1.1</small></p>
    </ion-content>    
</ion-modal-view>